<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.explore.presentation.pages.ExplorePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_spacing_padding_m">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/top_banner_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Banner -->
            <ImageView
                android:id="@+id/top_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_to_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_explore"
            android:layout_below="@id/top_banner_shimmer"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="@dimen/default_spacing_margin_l" />

        <!-- Section 1 -->
        <LinearLayout
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/welcome_to_explore"
            android:layout_marginTop="@dimen/default_spacing_margin_xs">

            <!-- Banner Section 1 -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/banner_section_1_shimmer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/default_size_layout_height_xl"
                android:layout_marginEnd="@dimen/default_spacing_margin_xs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banner_section_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- Banner Section 2 -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/banner_section_2_shimmer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/default_size_layout_height_xl"
                android:layout_marginStart="@dimen/default_spacing_margin_xs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banner_section_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

        <!-- Section 2 -->
        <LinearLayout
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/section1"
            android:layout_marginTop="@dimen/default_spacing_margin_m">

            <!-- Banner Section 3 -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/banner_section_3_shimmer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/default_size_layout_height_xl"
                android:layout_marginEnd="@dimen/default_spacing_margin_xs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banner_section_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- Banner Section 4 -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/banner_section_4_shimmer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/default_size_layout_height_xl"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/default_spacing_margin_xs">

                <ImageView
                    android:id="@+id/banner_section_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

        <!-- Bottom Banner -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/bottom_banner_shimmer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/section2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/default_spacing_margin_l">

            <ImageView
                android:id="@+id/bottom_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>
</ScrollView>
