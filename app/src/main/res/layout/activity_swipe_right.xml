<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SwipeRightActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- MaterialToolbar in AppBar -->
        <com.google.android.material.appbar.MaterialToolbar
            app:titleCentered="true"
            android:id="@+id/swipeRightTopAppBar"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/back"
            app:menu="@menu/default_top_app_bar"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView: Displays a list of items in a scrollable manner. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/swipeRightRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>