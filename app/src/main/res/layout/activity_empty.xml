<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout defines the UI for the MessageActivity, displaying a centered message. -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".EmptyActivity">

<!-- Centered LinearLayout: Contains a TextView displayed at the center of the layout. -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- TextView: Displays a headline message. -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:text="Empty Activity" />
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>