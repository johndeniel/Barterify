<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/nested_scroll_view"
    tools:context=".features.profile.presentation.pages.ProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- MaterialToolbar in AppBar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Setting and activity"
                app:menu="@menu/default_top_app_bar" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/default_spacing_padding_xl">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Avatar ImageView -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="@dimen/default_size_image_width_l"
                        android:layout_height="@dimen/default_size_image_height_l"
                        android:src="@drawable/logo"
                        android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/badgeImageView"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/add"
                        app:tint="#00a2ed"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:layout_alignEnd="@id/avatarImageView"
                        android:layout_alignBottom="@id/avatarImageView"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="3dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/default_spacing_padding_xxl2"
                android:layout_marginEnd="@dimen/default_spacing_padding_xl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_gravity="center_horizontal"
                    android:text="14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_spacing_padding_xs"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:layout_gravity="center_horizontal"
                    android:text="Posts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginEnd="@dimen/default_spacing_padding_xl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/followers_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_spacing_padding_xs"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/followers" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/following_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_spacing_padding_xs"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/following" />
            </LinearLayout>
        </LinearLayout>

        <!-- User's Full Name -->
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_spacing_padding_s"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@string/app_name"
            android:layout_marginStart="@dimen/default_spacing_padding_m"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_spacing_padding_xl"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/gallery"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/heart"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/organization" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
