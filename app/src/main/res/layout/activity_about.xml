<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <!-- Scrollable Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vertical LinearLayout for Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="Danielle Barter App"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal" />

            <!-- Professional Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="italic"
                android:text="Trading for a Sustainable Tomorrow"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal" />

            <!-- About Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="Welcome to the Danielle Barter App – your trusted platform for seamless and eco-conscious bartering. Our mission is to cultivate a vibrant community where individuals can exchange goods and services, contributing to a more sustainable future and fostering meaningful connections."
                android:layout_marginBottom="16dp" />

            <!-- Company Mission -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                android:text="Our Mission:"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="At Danielle Barter, we're dedicated to advancing a sharing economy that harmonizes social responsibility and environmental awareness. Through the facilitation of item and skill exchanges, we are committed to curbing waste and nurturing profound connections within our community. Our team of passionate individuals strives to create a platform that empowers users to embrace sustainable living while building a strong network of like-minded individuals."
                android:layout_marginBottom="16dp" />

            <!-- Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                android:text="Key Features:"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="🔄 Effortless Bartering: Seamlessly trade items and services with ease. Our user-friendly interface ensures that you can list your offerings and browse others' listings effortlessly, making the bartering process a breeze."
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="🌱 Sustainable Living: Champion ecological preservation by sharing and reusing resources. Join the movement towards reducing waste and promoting a greener lifestyle through responsible consumption and trading."
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="🤝 Community Building: Forge connections with kindred spirits, fostering enriching relationships. The Danielle Barter community is a supportive and diverse space where members come together to exchange not only items but also experiences and knowledge."
                android:layout_marginBottom="16dp" />

            <!-- Additional Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                android:text="Additional Features:"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="💼 Professional Networking: Connect with professionals in your field for skill exchange and career growth. Expand your professional network while trading valuable expertise."
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="🌍 Global Reach: Trade with users from around the world, broadening your cultural horizons. Experience the richness of diverse perspectives and access unique offerings from various corners of the globe."
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="🔒 Secure Transactions: Our platform ensures safe and reliable exchanges for all users. We employ advanced security measures to protect your data and facilitate trustworthy transactions."
                android:layout_marginBottom="16dp" />

            <!-- Contact Us -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                android:text="Contact Us:"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="Have questions, suggestions, or feedback? Reach us at info@daniellebarterapp.com. We're eager to hear from you and continuously improve our platform based on your input."
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>