                android:checkable="true"
                app:showAsAction="ifRoom"/>

            <!-- Settings Item -->
            <item
                android:id="@+id/settings"
                android:icon="@drawable/settings"
                android:title="Settings"
                android:checkable="true"
                app:showAsAction="ifRoom"/>

