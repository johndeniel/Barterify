    <!-- Main Item Menu for Premium -->
    <item
        android:id="@+id/main_item"
        android:title="Premium">

        <menu>
            <!-- Upgrade Plan Item -->
            <item
                android:id="@+id/plan"
                android:icon="@drawable/plan"
