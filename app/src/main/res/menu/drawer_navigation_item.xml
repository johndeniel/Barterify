            <!-- App Theme Item -->
            <item
                android:id="@+id/theme"
                android:icon="@drawable/theme"
                android:title="App Theme"
                android:checkable="true"
                app:showAsAction="ifRoom"/>

            <!-- Widgets Item -->
            <item
                android:id="@+id/widgets"
                android:icon="@drawable/widgets"
                android:title="Widgets"
                android:checkable="true"
