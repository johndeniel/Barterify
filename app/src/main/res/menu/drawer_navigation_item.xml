    <item
        android:id="@+id/main_itssem"
        android:title="@string/app_name">

        <menu>
            <!-- Messages Item -->
            <item
                android:id="@+id/messages"
                android:icon="@drawable/envelope"
                android:title="Messages"
                android:checkable="true"
